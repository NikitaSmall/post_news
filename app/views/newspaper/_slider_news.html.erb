<div class="row">
  <div class="fotorama main-slider">
    <% @featured_posts.each do |post| %>
    <div class="fotorama-slide">
      <%= image_tag post.photo.url %>
      <div class="slide-info">
        <p class="title">
          <%= post.title %>
        </p>
        <p class="text">
          <%= truncate strip_tags(post.content.html_safe), length: 150 %>
        </p>
        <div class="counters">
          <a href="#" class="views">
            <i><span></span></i> <%= post.visits %>
          </a>
          <%= link_to read_post_path(post.id, anchor: 'disqus_thread'), class: 'comments' do %>
              <i><span></span></i> <span class="disqus-comment-count" data-disqus-url="<%= read_post_url(post.id) %>"></span>
          <% end %>

          <a href="#" class="shares">
            <i><span></span></i> <%= post.shared %>
          </a>
        </div>
        <%= link_to 'Читать полностью', read_post_path(post), class: 'read-more-btn' %>
      </div>
    </div>
    <% end %>
  </div>
</div>