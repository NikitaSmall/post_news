<hr/>
<div class="result-items-wrapper">
  <% @posts.each do |post| %>
      <%= link_to read_post_path(post), class: 'clearfix item-result' do %>
          <%= image_tag post.photo.url %>
          <time><%= Russian::strftime(post.created_at, "%d %B %Y") %></time>
          <span class="title"><%= post.title %></span>
          <span class="text"><%= truncate strip_tags(post.content.html_safe), length: 150 %></span>
      <% end %>
      <hr/>
  <% end %>
</div>

<div class="col-md-4 col-md-offset-4">
  <%= will_paginate @posts %>
</div>