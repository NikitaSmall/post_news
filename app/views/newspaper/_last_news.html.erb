<% unless Post.main.empty? %>
<div class="row last-news-block">
  <p class="title">
    последние <br/>новости
  </p>

  <div class="swiper-container">
    <!-- Additional required wrapper -->
    <div class="swiper-wrapper">
      <!-- Slides -->
      <% Post.order(created_at: :desc).first(6).each do |post|%>
      <div class="swiper-slide">
        <p class="news-text">
            <%= link_to post.title, read_post_path(post) %>
        </p>
        <time><%= time_ago_in_words(post.created_at) %> назад</time>
      </div>
      <% end %>
    </div>
  </div>
</div>
<% end %>